<config>
    <modules>
        <Mtaube_Requirejs>
            <version>0.1.0</version>
        </Mtaube_Requirejs>
    </modules>

    <global>
        <blocks>
            <requirejs>
                <class>Mtaube_Requirejs_Block</class>
            </requirejs>
        </blocks>

        <events>
            <clean_media_cache_after>
                <observers>
                    <clean_built_module_set_js>
                        <class>requirejs/observer</class>
                        <method>cleanBuiltModuleSetJs</method>
                    </clean_built_module_set_js>
                </observers>
            </clean_media_cache_after>
        </events>

        <helpers>
            <requirejs>
                <class>Mtaube_Requirejs_Helper</class>
            </requirejs>
        </helpers>

        <models>
            <requirejs>
                <class>Mtaube_Requirejs_Model</class>
            </requirejs>
        </models>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <use>admin</use>
                    <modules>
                        <Mtaube_Requirejs before="Mage_Adminhtml">Mtaube_Requirejs_Adminhtml</Mtaube_Requirejs>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <requirejs>
                    <file>adminhtml.xml</file>
                </requirejs>
            </updates>
        </layout>
    </adminhtml>

    <default>
        <requirejs>
            <settings>
                <active>1</active>
                <common_module_base_dir>requirejs</common_module_base_dir>
                <common_module_name>common</common_module_name>
            </settings>
        </requirejs>
    </default>

    <frontend>
        <layout>
            <updates>
                <requirejs>
                    <file>requirejs.xml</file>
                </requirejs>
            </updates>
        </layout>
    </frontend>
</config>
